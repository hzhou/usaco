include: ../../usaco.def
page: mountains_silver, basic_frame
    module: cpp

    &call open_In
        $call scan_Int, N
        $my int x_list[N], int y_list[N]
        $for i=0:N
            $call scan_int, x_list[i], y_list[i]

    $my int P[N]
    $for i=0:N
        P[i]=i

    &call std_sort, P, N, int
        return y_list[a] > y_list[b]

    $my int visible[N]

    count = 0
    $for i=0:N
        flag = 1
        $for j=0:i
            $if visible[j]
                $(set:xi=x_list[P[i]])
                $(set:yi=y_list[P[i]])
                $(set:xj=x_list[P[j]])
                $(set:yj=y_list[P[j]])
                # $(yi)<=$(yj)
                $if abs($(xi)-$(xj)) <= $(yj)-$(yi)
                    flag = 0
                    break
        visible[i] = flag

    count = 0
    $for i=0:N
        $if visible[i]
            count++

    $dump count
    &call open_Out
        $print $count


            

